require "rubygems"
require 'castoro-peer/cmond'

Castoro::Peer::ServerStatus.instance.status_name = 'offline'
m = Castoro::Peer::CmondMain.instance

Thread.new {
  sleep 0.5
  c = Castoro::Peer::Configurations.instance
  RemoteControl.set_mode( 'localhost', c.CpeerdMaintenancePort )
  RemoteControl.set_mode( 'localhost', c.CrepdMaintenancePort )
}

m.main_loop
