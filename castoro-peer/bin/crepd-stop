require "optparse"
require "socket"

require "rubygems"
require "castoro-peer/configurations"

conffile = Castoro::Peer::Configurations::DEFAULT_FILE

OptionParser.new { |opt|

  opt.on("-c", "--c conffile", "configurations file fullpath") { |v|
    conffile = v
  }

  opt.parse! ARGV
}

STDERR.puts "#{File.basename($0)} is going to shutdown ... "
conf = Castoro::Peer::Configurations.new conffile
port = conf[:crepd_maintenance_port]

s = nil
begin
  s = TCPSocket.new 'localhost', port
  s.puts 'shutdown'
  s.gets

rescue => e
  puts e.message
  exit 1

ensure
  s.close if s rescue nil
  s = nil
end

